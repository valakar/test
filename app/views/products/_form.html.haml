= form_for(@product) do |f|
  %div.name
    = f.label :name
    = f.text_field :name
  %div.category
    = f.label :category_id
    = f.select :category_id, @categories.map {|c| [c.name, c.id]}, :prompt => "Choose category", :disabled => true
  %div.thumburl
    = f.label :thumburl
    = f.url_field :thumburl
  %div.description
    = f.label :description
    = f.text_area :description

  %div.actions
    = f.submit 'go', class: "btn btn-success"